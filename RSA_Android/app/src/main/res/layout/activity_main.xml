<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/guidelineHorizontal1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       app:layout_constraintGuide_percent="0.25" />

   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/guidelineHorizontal2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       app:layout_constraintGuide_percent="0.66" />

   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/guidelineVertical1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintGuide_percent="0.24" />

   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/guidelineVertical2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintGuide_percent="0.6"/>

   <TextView
       android:id="@+id/tv_p"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="p = "
       android:textSize="16sp"
       app:layout_constraintEnd_toStartOf="@+id/guidelineVertical1"

       app:layout_constraintTop_toTopOf="parent"/>

   <TextView
       android:id="@+id/tv_q"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="12dp"
       android:text="q = "
       android:textSize="16sp"
       app:layout_constraintEnd_toStartOf="@+id/guidelineVertical1"
       app:layout_constraintHorizontal_bias="0.517"

       app:layout_constraintTop_toBottomOf="@id/tv_p" />

   <TextView
       android:id="@+id/tv_n"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="12dp"
       android:text="n = "
       android:textSize="16sp"
       app:layout_constraintEnd_toStartOf="@+id/guidelineVertical1"
       app:layout_constraintHorizontal_bias="0.517"

       app:layout_constraintTop_toBottomOf="@id/tv_q" />

   <TextView
       android:id="@+id/textViewP"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:hint="...."
       app:layout_constraintTop_toTopOf="parent"
       android:textSize="16sp"
       app:layout_constraintStart_toStartOf="@+id/guidelineVertical1" />

   <TextView
       android:id="@+id/textViewQ"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="12dp"
       android:hint="...."
       android:textSize="16sp"
       app:layout_constraintStart_toStartOf="@+id/guidelineVertical1"
       app:layout_constraintTop_toBottomOf="@id/textViewP" />

   <TextView
       android:id="@+id/textViewN"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="12dp"
       android:hint="...."
       android:textSize="16sp"
       app:layout_constraintStart_toStartOf="@+id/guidelineVertical1"
       app:layout_constraintTop_toBottomOf="@id/textViewQ" />

   <Button
       android:id="@+id/btn_generate_pq"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Generate p,q"
       android:backgroundTint="#658354"
       android:layout_marginTop="12dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="@+id/guidelineVertical2"
       app:layout_constraintTop_toTopOf="parent" />

   <Button
       android:id="@+id/btn_encrypt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Encrypt"
       android:backgroundTint="#338257"
       android:layout_marginTop="12dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="@+id/guidelineVertical2"
       app:layout_constraintTop_toBottomOf="@+id/btn_generate_pq" />

   <Button
       android:id="@+id/btn_decrypt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Decrypt"
       android:backgroundTint="#58934B"
       android:layout_marginTop="12dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="@+id/guidelineVertical2"
       app:layout_constraintTop_toBottomOf="@+id/btn_encrypt" />

